%p#notice= notice
%h1 Detalle Pedidos
%table
  %thead
    %tr
      %th Pedido
      %th Menu
      %th{:colspan => "3"}
  %tbody
    - @detalle_pedidos.each do |detalle_pedido|
      %tr
        %td= detalle_pedido.pedido
        %td= detalle_pedido.menu
        %td= link_to 'Show', detalle_pedido
        %td= link_to 'Edit', edit_detalle_pedido_path(detalle_pedido)
        %td= link_to 'Destroy', detalle_pedido, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Detalle Pedido', new_detalle_pedido_path
