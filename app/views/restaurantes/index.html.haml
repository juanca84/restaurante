%p#notice= notice
%h1 Restaurantes
%table
  %thead
    %tr
      %th Nit
      %th Nombre
      %th{:colspan => "3"}
  %tbody
    - @restaurantes.each do |restaurante|
      %tr
        %td= restaurante.nit
        %td= restaurante.nombre
        %td= link_to 'Show', restaurante
        %td= link_to 'Edit', edit_restaurante_path(restaurante)
        %td= link_to 'Destroy', restaurante, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Restaurante', new_restaurante_path
