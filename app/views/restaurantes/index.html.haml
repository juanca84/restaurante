%p#notice= notice
.container-fluid
  .row
    %main.col-sm-9.ml-sm-auto.col-md-12.pt-3{:role => "main"}
      %h1 Restaurantes
      .table-responsive
        %table.table.table-striped
          %thead
            %tr
              %th NIT
              %th Nombre
              %th Acciones
          %tbody
            - @restaurantes.each do |restaurante|
              %tr
                %td= restaurante.nit
                %td= restaurante.nombre
                %td
                  = link_to 'Mostrar', restaurante, class: 'btn btn-primary btn-sm'
                  = link_to 'Editar', edit_restaurante_path(restaurante), class: 'btn btn-info btn-sm'
                  = link_to 'Eliminar', restaurante, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Â¿Estas seguro?' }
%br/
= link_to 'Nuevo Restaurante', new_restaurante_path, class: 'btn btn-primary'
