%p#notice= notice
%h1 Restaurantes
%table
  %thead
    %tr
      %th Nit
      %th Nombre
      %th{:colspan => "3"}
  %tbody
    - @restaurantes.each do |restaurante|
      %tr
        %td= restaurante.nit
        %td= restaurante.nombre
        %td= link_to 'Mostrar', restaurante, class: 'btn btn-primary btn-sm'
        %td= link_to 'Editar', edit_restaurante_path(restaurante), class: 'btn btn-info btn-sm'
        %td= link_to 'Eliminar', restaurante, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Â¿Estas seguro?' }
%br/
= link_to 'Nuevo Restaurante', new_restaurante_path, class: 'btn btn-primary'
