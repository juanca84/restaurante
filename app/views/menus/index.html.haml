%p#notice= notice
%h1 Menus
%table
  %thead
    %tr
      %th Codigo
      %th Nombre
      %th Precio
      %th Restaurante
      %th{:colspan => "3"}
  %tbody
    - @menus.each do |menu|
      %tr
        %td= menu.codigo
        %td= menu.nombre
        %td= menu.precio
        %td= menu.restaurante
        %td= link_to 'Show', menu
        %td= link_to 'Edit', edit_menu_path(menu)
        %td= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Menu', new_menu_path
