%p#notice= notice
.container-fluid
  .row
    %main.col-sm-9.ml-sm-auto.col-md-12.pt-3{:role => "main"}
      %h1 Mesas
      .table-responsive
        %table.table.table-striped
          %thead
            %tr
              %th Número
              %th Restaurante
              %th Acciones
          %tbody
            - @mesas.each do |mesa|
              %tr
                %td= mesa.numero
                %td= link_to mesa.restaurante_nombre, restaurante_path(mesa.restaurante.id)
                %td
                  = link_to 'Mostrar', mesa, class: 'btn btn-primary btn-sm'
                  = link_to 'Editar', edit_mesa_path(mesa), class: 'btn btn-info btn-sm'
                  = link_to 'Eliminar', mesa, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: '¿Estas seguro?' }
%br/
= link_to 'Nueva Mesa', new_mesa_path, class: 'btn btn-primary'
